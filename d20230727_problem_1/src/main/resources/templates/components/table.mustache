{{ #student }}
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td colspan="2">2020년 2학기 수강신청</td>
    </tr>
    <tr>
      <td>이름</td>
      <td>{{ name }}</td>
    </tr>
    <tr>
      <td>학번</td>
      <td>{{ hakbun }}</td>
    </tr>
    <tr>
      <td>학부(과)</td>
      <td>{{ majorName }}</td>
    </tr>
    <tr>
      <td>학년</td>
      <td>{{ grade }}</td>
    </tr>
    <tr>
      <td>최소신청학점</td>
      <td>?</td>
    </tr>
    <tr>
      <td>최대신청학점</td>
      <td>?</td>
    </tr>
    <tr>
      <td colspan="2">
        <button type="button" onclick="logout()">로그아웃</button>
      </td>
    </tr>
  </tbody>
</table>

<script>
  function logout() {
    fetch('/logout')
      .then(r => {
        if (r.ok) {
          location.href = '/login'
        } else {
          alert('알 수 없는 오류가 발생했습니다.')
          console.log(r);
        }
      })
      .catch(r => {
        alert('오류가 발생했습니다.')
        console.log(r);
      })
  }
</script>
